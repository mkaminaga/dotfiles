defencoding UTF-8
defkanji UTF-8
encoding UTF-8 UTF-8

defbc on
term xterm-256color
termcapinfo xterm-256color 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

hardstatus on
hardstatus alwaysfirstline "[%Y/%m/%d %02c:%s] %`%-w%{=b bw}%n %t%{-}%+w"

shelltitle "$ |bash"
startup_message off
autodetach on
silencewait 15
defscrollback 3000
vbell off
altscreen altscreen on
shell -$SHELL
